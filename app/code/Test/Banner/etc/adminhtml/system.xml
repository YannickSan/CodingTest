<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="cms">
            <group id="banners" translate="label" type="text" sortOrder="2000" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Banners</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Banners on Frontend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Enables any banner that could be shown on the frontend]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>
